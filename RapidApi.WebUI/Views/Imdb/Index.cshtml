@model List<ImdbViewModel.Movie>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Imdb Top 250</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Film Afişi</th>
        <th>Film Adı</th>
        <th>Çıkış Yılı</th>
        <th>Imdb Puanı</th>
        <th>Imdb Linki</th>


    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.primaryImage" width="100" height="150"/></td>
            <td>@item.originalTitle</td>
            <td>@item.startYear</td>
            <td>@item.averageRating</td>
            <td><a href="@item.url" target="_blank" class="btn btn-warning">Imdb Linki</a></td>



        </tr>


    }

</table> 



